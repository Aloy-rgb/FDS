    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        this.setVisible(false);
        EOUI main = new EOUI();
        main.setVisible(true);
        try {
            String EmployeeID=EmpID.getText();
            String EmployeeFirstName=EmpFN.getText();
            String EmployeeLastName=EmpLN.getText();
            // *** CHANGE 1: Create EmployeeName by concatenating First and Last Name ***
            String employeeName = EmployeeFirstName + " " + EmployeeLastName; 
            String EmployeeUsername=EmpUsername.getText();
            String Password=EmpPass.getText();
            
            Connection con;
            PreparedStatement pre;
            
            con=DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
            
            // *** CHANGE 2: Update the SQL query to insert EmployeeName instead of EmployeeFirstName, EmployeeLastName ***
            // The table structure in your image shows EmployeeName, not separate first/last names.
            pre=con.prepareStatement("insert into employee(EmployeeID,EmployeeName,EmployeeUsername,Password)values(?,?,?,?)");
            
            // *** CHANGE 3: Update parameter setting to match the new query ***
            pre.setString(1, EmployeeID);
            pre.setString(2, employeeName); // Using the concatenated EmployeeName
            pre.setString(3, EmployeeUsername);
            pre.setString(4, Password);
            // Note: Removed the trailing comma from the column list in the SQL query.
            // pre.setString(5, Password); // Now set at index 4

            pre.executeUpdate();
            JOptionPane.showMessageDialog ( null, "Employee Registered Successfully!"); // Changed message for clarity
        } catch (SQLException ex) {
            // Use the logger defined in the class or print stack trace for debugging
            logger.log(java.util.logging.Level.SEVERE, "Registration failed", ex); 
            JOptionPane.showMessageDialog ( null, "Registration Error: " + ex.getMessage());
        }
    
    }                                        

