    private void AutoID()
{
    try {
        Connection con;
        PreparedStatement pre;
        
        con = DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
        pre = con.prepareStatement("SELECT MAX(EmployeeID) FROM employee");
        ResultSet rs = pre.executeQuery();
        
        rs.next();
        String maxID = rs.getString("MAX(EmployeeID)");
        
        if (maxID == null)
        {
            // Set the first ID to USER001 for consistency
            EmpID.setText("USER001"); 
        } else {
            // Assumes the current maxID is in the format PREFIXXXX (e.g., USER001)
            // Determine the current numeric part of the ID (e.g., 001)
            
            // Check if the current ID uses the expected prefix length (e.g., "USER" is 4 characters)
            String prefix = maxID.substring(0, 4); 
            String numPart = maxID.substring(4);
            
            // Try to parse the numeric part
            long id = Long.parseLong(numPart);
            id++;
            
            // Use the consistent prefix "USER" and format the number to 3 digits
            EmpID.setText("USER" + String.format("%03d", id));
        }
        
    } catch (SQLException ex) {
        // Logging the error using the class logger
        logger.log(java.util.logging.Level.SEVERE, "Error generating AutoID", ex);
        JOptionPane.showMessageDialog(null, "Database Error during ID generation: " + ex.getMessage());
    } catch (NumberFormatException ex) {
        // Catch if an existing ID's format is wrong (e.g., if it wasn't USER001, USER002)
        logger.log(java.util.logging.Level.SEVERE, "Error parsing existing MAX(EmployeeID)", ex);
        JOptionPane.showMessageDialog(null, "ID Format Error: Existing Max ID is invalid. " + ex.getMessage());
    }
}
