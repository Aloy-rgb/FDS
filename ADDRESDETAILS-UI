        // TODO add your handling code here:
    }                                     

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String inHour = (String) HOURin.getSelectedItem();
        String inMinute = (String) MINUTEin.getSelectedItem();
        String inAmPm = (String) AMin.getSelectedItem();
        String outHour = (String) HOURout.getSelectedItem();
        String outMinute = (String) MINUTEout.getSelectedItem();
        String outAmPm = (String) AMout.getSelectedItem();
        LocalTime startTime = getLocalTime(inHour, inMinute, inAmPm);
        LocalTime endTime = getLocalTime(outHour, outMinute, outAmPm);
        if (startTime == null || endTime == null) {
            duration.setText("");
            return;
        }

        try {
            long totalSeconds = java.time.Duration.between(startTime, endTime).getSeconds();
            if (totalSeconds < 0) {
                // Adjust for overnight duration (add 24 hours in seconds)
                totalSeconds += (24 * 60 * 60);
        }
            long hours = totalSeconds / 3600;
            long minutes = (totalSeconds % 3600) / 60;
            String result = String.format("%d hours and %d minutes", hours, minutes);
            duration.setText(result);
            JOptionPane.showMessageDialog(this, "Duration calculated: " + result, "Calculation Success", JOptionPane.INFORMATION_MESSAGE);

        } catch (Exception ex) {
            logger.log(java.util.logging.Level.SEVERE,"Error calculating time difference.", ex);
            JOptionPane.showMessageDialog(this, "An unexpected error occurred during calculation.", "Calculation Error", JOptionPane.ERROR_MESSAGE);
            duration.setText("");
        }
    }                                        

