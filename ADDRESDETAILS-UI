    private String formatTimeForDatabase(String hour, String minute, String amPm) {
    try {
        int h = Integer.parseInt(hour);
        
        // --- 12-Hour to 24-Hour Conversion Logic ---
        if (amPm.equalsIgnoreCase("PM") && h != 12) {
            h += 12;
        } else if (amPm.equalsIgnoreCase("AM") && h == 12) {
            h = 0; // 12 AM (Midnight) becomes 00:XX
        }

        // Format to HH:MM:SS string
        // The minute selection includes "60", which should be "00" for the next hour. 
        // We'll trust the user selected 00-55 for now.
        return String.format("%02d:%s:00", h, minute);
    } catch (NumberFormatException e) {
        logger.log(java.util.logging.Level.SEVERE, "Error formatting time: Invalid number in hour/minute.", e);
        return null; 
    }
}

    private LocalTime getLocalTime(String hour, String minute, String amPm) {
        // Handle potential null or empty selection first
        if (hour == null || minute == null || amPm == null || 
            hour.trim().isEmpty() || minute.trim().isEmpty() || amPm.trim().isEmpty()) {
            return null;
        }
        
        try {
            // Combine components into a 12-hour formatted string
            String timeString = String.format("%s:%s %s", hour, minute, amPm);
            
            // 1. Use SimpleDateFormat to parse the 12-hour string
            java.text.SimpleDateFormat twelveHourFormat = new java.text.SimpleDateFormat("hh:mm a");
            java.util.Date date = twelveHourFormat.parse(timeString);
            
            // 2. Convert the Date object into a 24-hour time string (HH:mm)
            java.text.SimpleDateFormat twentyFourHourFormat = new java.text.SimpleDateFormat("HH:mm");
            String twentyFourHourTime = twentyFourHourFormat.format(date);
            
            // 3. Parse into LocalTime 
            return java.time.LocalTime.parse(twentyFourHourTime, java.time.format.DateTimeFormatter.ofPattern("HH:mm"));

        } catch (java.text.ParseException | NullPointerException | java.time.format.DateTimeParseException ex) {
            logger.log(java.util.logging.Level.SEVERE, "Error parsing time components to LocalTime.", ex);
            JOptionPane.showMessageDialog(this, "Time selection error. Please ensure valid Hour, Minute, and AM/PM are selected.", "Input Error", JOptionPane.ERROR_MESSAGE);
            return null;
        }
    }
}
