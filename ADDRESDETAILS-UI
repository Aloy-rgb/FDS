    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String ReservationID = ResID.getText();
        String Duration = duration.getText();
    
    // Check if the ID is present before proceeding (optional but recommended)
    if (ReservationID == null || ReservationID.trim().isEmpty()) {
        JOptionPane.showMessageDialog(this, "Reservation ID is missing.", "Input Error", JOptionPane.WARNING_MESSAGE);
        return; 
    }
    if (Duration.isEmpty() || Duration.trim().equalsIgnoreCase("TOTAL") || Duration.trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please press 'Calculate' to determine the event duration first.", "Input Error", JOptionPane.WARNING_MESSAGE);
            return;
        }

    // FIX 2: Correctly retrieve JComboBox values using getSelectedItem()
    String inHour = (String) HOURin.getSelectedItem();
    String inMinute = (String) MINUTEin.getSelectedItem();
    String inAmPm = (String) AMin.getSelectedItem();
    String outHour = (String) HOURout.getSelectedItem();
    String outMinute = (String) MINUTEout.getSelectedItem();
    String outAmPm = (String) AMout.getSelectedItem();
    String EmployeeName = SessionManager.getInstance().getEmployeeName();
    if (EmployeeName == null) {
    JOptionPane.showMessageDialog(this, "Employee context missing. Please log in again.", "Error", JOptionPane.ERROR_MESSAGE);
    return;
}
    String PersonName = this.currentPersonName;
    String EventName = this.currentEventName;
    if (PersonName == null || EventName == null) {
        JOptionPane.showMessageDialog(this, "Missing critical information (Employee/Person/Event).", "System Error", JOptionPane.ERROR_MESSAGE);
        return;
    }
    
    // Assuming VenCap holds "VenueName (Capacity)" and you want the whole string
    String VenueName = (String) VenCap.getSelectedItem(); 
    
    java.util.Date dateValue = Date.getDate();
    String EventDateDa = null;

    if (dateValue == null) {
        JOptionPane.showMessageDialog(this, "Please select an Event Date.", "Input Error", JOptionPane.WARNING_MESSAGE);
        return; // Stop execution
    }

    try {
        
        DateFormat da = new SimpleDateFormat("yyyy-MM-dd"); 
        EventDateDa = da.format(dateValue);

        // --- Time Formatting Fix (Calls the newly implemented method) ---
        String StartTime = formatTimeForDatabase(inHour, inMinute, inAmPm);
        String EndTime = formatTimeForDatabase(outHour, outMinute, outAmPm);
        
        if (StartTime == null || EndTime == null) {
            JOptionPane.showMessageDialog(this, "Time format error. Check hour/minute selection.", "Error", JOptionPane.ERROR_MESSAGE);
            return; // Stop execution
        }

        // FIX 3: Corrected SQL Insertion statement
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
        PreparedStatement pre = con.prepareStatement(
            "INSERT INTO reservation(ReservationID, EmployeeName, PersonName, EventName, StartTime, EndTime, Duration, VenueName, EventDate) VALUES (?,?,?,?,?,?,?,?,?)"
);
        
        pre.setString(1, ReservationID);
        pre.setString(2, EmployeeName); 
        pre.setString(3, PersonName);   
        pre.setString(4, EventName);    
        pre.setString(5, StartTime);
        pre.setString(6, EndTime);
        pre.setString(7, Duration);
        pre.setString(8, VenueName);
        pre.setString(9, EventDateDa);
        
        pre.executeUpdate();
        JOptionPane.showMessageDialog(null, "Booking Successful!");
        
        // Move to the next form *after* successful execution
        this.setVisible(false);
        RUI Con = new RUI();
        Con.setVisible(true);
        
    } catch (SQLException ex) {
        logger.log(java.util.logging.Level.SEVERE, "Database error during booking.", ex);
        JOptionPane.showMessageDialog(this, "A database error occurred: " + ex.getMessage(), "Database Error", JOptionPane.ERROR_MESSAGE);
    } catch (Exception ex) {
         logger.log(java.util.logging.Level.SEVERE, "An unexpected error occurred.", ex);
    }

    }                                        

