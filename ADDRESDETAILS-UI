    private void AutoID()
    {
        try {
            Connection con;
            PreparedStatement pre;
            con=DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
            pre=con.prepareStatement("Select MAX(ReservationID) from reservation");
            ResultSet rs = pre.executeQuery();
            rs.next();
            if(rs.getString("MAX(ReservationID)")==null)
            {
                ResID.setText("RN001");
            }else
            {
                long id=Long.parseLong(rs.getString("MAX(ReservationID)").substring(2, rs.getString("MAX(ReservationID)").length()));
                id++;
                ResID.setText("PN"+String.format("%03d", id));
                
            }
            
            
        } catch (SQLException ex) {
            System.getLogger(ADDUI.class.getName()).log(System.Logger.Level.ERROR, (String) null, ex);
        }
        
    }
