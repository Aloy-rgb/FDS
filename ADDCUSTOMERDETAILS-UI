    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String employeeName = SessionManager.getInstance().getEmployeeName();
    
    // Get Person data from text fields
    String PersonID = PerID.getText();
    String FirstName = firstname.getText();
    String LastName = lastname.getText();
    
    
    String personName = FirstName + " " + LastName; 
    
    String Phone = PN.getText();
    String Email = Emailadd.getText();
    
    // EventName comes from the text field
    String eventName = eventname.getText();
    String finalEventName = eventName;
    
    // Basic Input Validation
    if (FirstName.isEmpty() || LastName.isEmpty() || Phone.isEmpty() || Email.isEmpty() || eventName.isEmpty()) {
         JOptionPane.showMessageDialog(this, "Please fill in all customer and event details.", "Input Error", JOptionPane.WARNING_MESSAGE);
         return; 
    }
    
    // Check if employee context is available before proceeding
    if (employeeName == null || employeeName.isEmpty()) {
        JOptionPane.showMessageDialog(this, "Employee not logged in. Please log in again.", "Error", JOptionPane.ERROR_MESSAGE);
        return; 
    }
    
    Connection con = null;
    PreparedStatement pre = null;
    ResultSet rs = null;

    try {
        con = DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
        
        int counter = 1;
        boolean isDuplicate = true;
        
        while (isDuplicate) {
            pre = con.prepareStatement("SELECT EventName FROM person WHERE EventName = ?");
            pre.setString(1, finalEventName);
            rs = pre.executeQuery();

            if (rs.next()) {
                counter++;
                finalEventName = eventName + "_" + counter;
            } else {
                isDuplicate = false;
            }
            if (rs != null) rs.close();
            if (pre != null) pre.close();
        }
        
        pre = con.prepareStatement("INSERT INTO person(PersonID, PersonName, Phone, Email, EventName) VALUES (?,?,?,?,?)");
        
        pre.setString(1, PersonID);
        pre.setString(2, personName); 
        pre.setString(3, Phone);
        pre.setString(4, Email);
        pre.setString(5, finalEventName);
        pre.executeUpdate();
        JOptionPane.showMessageDialog(null, "Customer details saved successfully!");
        
        // --- 3. Navigate AFTER successful save ---
        
        // Pass the successfully saved FK values to the next form
        Time_Venue timeVenueFrame = new Time_Venue(employeeName, personName, eventName);
        
        this.setVisible(false);
        timeVenueFrame.setVisible(true);
        
    } catch (SQLException ex) {
        logger.log(java.util.logging.Level.SEVERE, "Database error during person insertion.", ex);
        JOptionPane.showMessageDialog(this, "Database Error: " + ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
    } finally {
        // Close resources
        try { if (rs != null) rs.close(); } catch (SQLException e) { /* log error */ }
        try { if (pre != null) pre.close(); } catch (SQLException e) { /* log error */ }
        try { if (con != null) con.close(); } catch (SQLException e) { /* log error */ }
    }
    }                                        

