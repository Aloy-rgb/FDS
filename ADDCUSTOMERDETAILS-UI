    public void AutoID()
    {
        try {
            Connection con;
            PreparedStatement pre;
            con=DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
            pre=con.prepareStatement("Select MAX(PersonID) from person");
            ResultSet rs = pre.executeQuery();
            rs.next();
            if(rs.getString("MAX(PersonID)")==null)
            {
                PerID.setText("PN001");
            }else
            {
                long id=Long.parseLong(rs.getString("MAX(PersonID)").substring(2, rs.getString("MAX(PersonID)").length()));
                id++;
                PerID.setText("PN"+String.format("%03d", id));
                
            }
            
        } catch (SQLException ex) {
            System.getLogger(ADDUI.class.getName()).log(System.Logger.Level.ERROR, (String) null, ex);
        }
        
    }

