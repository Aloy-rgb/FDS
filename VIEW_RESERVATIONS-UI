    private void LoadReservationData() {
        Connection con = null;
    PreparedStatement pre = null;
    ResultSet rs = null;
    try {
        con = DriverManager.getConnection("jdbc:mysql://localhost:3306/eventorganizer", "root", "Lyanmarc2004@");
        String sql = "SELECT ReservationID, EmployeeName, PersonName, EventName, VenueName, EventDate, StartTime, EndTime, Duration FROM reservation";
        pre = con.prepareStatement(sql);
        rs = pre.executeQuery();
        ResultSetMetaData rsmd = rs.getMetaData();
        int columnCount = rsmd.getColumnCount();
        
        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        model.setRowCount(0);
        Vector<String> columnNames = new Vector<>();
        for (int i = 1; i <= columnCount; i++) {
            columnNames.add(rsmd.getColumnName(i));
        }
        model.setColumnIdentifiers(columnNames);
        while (rs.next()) {
            Vector<Object> row = new Vector<>();
            for (int i = 1; i <= columnCount; i++) {
                row.add(rs.getObject(i));
            }
            model.addRow(row);
        }
        
    } catch (SQLException ex) {
        logger.log(java.util.logging.Level.SEVERE, "Error loading reservation data.", ex);
        JOptionPane.showMessageDialog(this, "Database Error: Could not load reservation records. " + ex.getMessage(), "System Error", JOptionPane.ERROR_MESSAGE);
        
    } finally {
        try { if (rs != null) rs.close(); } catch (SQLException e) { /* Log error closing rs */ }
        try { if (pre != null) pre.close(); } catch (SQLException e) { /* Log error closing pre */ }
        try { if (con != null) con.close(); } catch (SQLException e) { /* Log error closing con */ }
    }
}

